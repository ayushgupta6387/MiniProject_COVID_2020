<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">

  <title>Covid-19</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="css/styles.css">
</head>

<body class="signin">
  <!-- Main container -->
  <div class="container">
    <div class="myCard">
      <div class="row">
        <!-- Left Part -->
        <div class="col-md-6">
          <div class="myLeftCtn">
            <form class="myForm text-center" action="/signin" method="post">
              <header>SignIn/LogIn</header>

              <!-- For email address input -->
              <div class="form-group">
                <i class="fa fa-envelope"></i>
                <input type="email" class="myInput" placeholder="Email" id="userId" name="useremail" required />
              </div>

              <!-- For password Input -->
              <div class="form-group">
                <i class="fa fa-lock"></i>
                <input type="password" class="myInput" placeholder="Password" name="userpassword" id="username" required />
              </div>

              <a class="forgot-password" href="#">Forgot Password?</a>

              <!-- Submit button -->
              <input type="submit" class="button" value="LogIn/SignIn" />
              <p class="log">Don't have an account? <a href="#">SignUp</a></p>
            </form>
          </div>
        </div>

        <!-- For right part -->
        <div class="right col-md-6">
          <div class="myRightCtn">
            <div class="box">
              <header>Covid-19</header>
              <img class="signimg" src="images/circle-cropped.png" alt="Covid-Image" />
              <h3>Join Us</h3>
              <h4>Health and Wellness</h4>
              <input type="button" class="button" value="About Us" />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</body>

</html>
