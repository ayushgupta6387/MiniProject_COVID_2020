<%- include("header") -%>

<!-- Main container -->
<div class="conatiner">
  <div class="myCard">
    <div class="row">

      <!-- Left Part -->
      <div class="col-md-6">
        <div class="myLeftCtn">
          <form class="myForm text-center" action="/home" method="post">
            <header>
              SignIn/LogIn
            </header>

            <!-- For email address input -->
            <div class="form-group">
              <i class="fa fa-envelope"></i>
              <input type="email" class="myInput" placeholder="Email" id="userId" required>
            </div>

            <!-- For password Input -->
            <div class="form-group">
              <i class="fa fa-lock"></i>
              <input type="password" palceholder="Passwird" id="username" required>
            </div>

            <!-- Submit button -->
            <input type="submit" value="SignIn">
          </form>
        </div>
      </div>

      <!-- For right part -->
      <div class="right col-md-6">
        <div class="myRightCtn">
          <div class="box">
            <header>
              World Wide Covid-19
            </header>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("footer") -%>
